{
  "name": "@strt/boilerplate",
  "version": "1.0.0",
  "description": "Lightweight front-end boilerplate",
  "license": "MIT",
  "author": "Strateg Marknadsf√∂ring <development@strateg.se> (https://strateg.se)",
  "scripts": {
    "dev": "bricks dev",
    "build": "bricks build",
    "lint": "yarn lint:scripts && yarn lint:styles",
    "lint:scripts": "eslint src --ext .js; exit 0",
    "lint:styles": "stylelint \"src/**/*.scss\"; exit 0",
    "format": "prettier --write \"**/*.{js,md,html,yaml,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-strateg"
  },
  "eslintConfig": {
    "extends": "strateg"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "stylelint",
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint",
      "git add"
    ]
  },
  "dependencies": {
    "core-js": "^3.0.0",
    "js-polyfills": "^0.1.42",
    "mitt": "^1.1.3",
    "normalize.css": "^8.0.1",
    "svgxuse": "^1.2.6"
  },
  "devDependencies": {
    "@strt/bricks": "^2.13.0",
    "eslint": "^5.4.0",
    "eslint-config-strateg": "^1.0.1",
    "husky": "^2.0.0",
    "lint-staged": "^8.0.0",
    "prettier": "^1.12.1",
    "stylelint": "^13.0.0",
    "stylelint-config-strateg": "^1.10.0"
  }
}
