{
  "name": "@strt/boilerplate",
  "version": "1.0.0",
  "description": "Lightweight front-end boilerplate",
  "license": "MIT",
  "author": "Strateg Marknadsf√∂ring <development@strateg.se> (http://strateg.se)",
  "scripts": {
    "dev": "bricks",
    "build": "bricks build",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint src --ext .js; exit 0",
    "lint:styles": "stylelint \"src/**/*.scss\"; exit 0",
    "format": "prettier-eslint --write \"src/**/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-strateg"
  },
  "eslintConfig": {
    "extends": "strateg"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "stylelint",
      "prettier-eslint --write",
      "git add"
    ],
    "*.scss": [
      "stylelint",
      "git add"
    ]
  },
  "dependencies": {
    "core-js": "^2.5.5",
    "js-polyfills": "^0.1.42",
    "reset-css": "^4.0.0",
    "svgxuse": "^1.2.6",
    "tiny-emitter": "^2.0.2"
  },
  "devDependencies": {
    "@strt/bricks": "^2.0.0",
    "eslint": "^5.4.0",
    "eslint-config-strateg": "^1.0.1",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "prettier": "^1.12.1",
    "prettier-eslint-cli": "^4.7.1",
    "stylelint": "^9.2.0",
    "stylelint-config-strateg": "^1.7.0"
  }
}
